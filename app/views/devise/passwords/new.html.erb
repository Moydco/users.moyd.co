<div class="jumbotron" align="center">
  <h1>Forgot your password?</h1>
</div>

<div class="container">
  <div class="well">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form', :class => 'form-horizontal' }) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'Email', :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, :required => true, :autofocus => true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Send me reset password instructions" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>

</div>