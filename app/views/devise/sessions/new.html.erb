<div class="jumbotron" align="center">
  <h1>Login</h1>
</div>

<div class="container">

  <div class="well">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:role => 'form', :class => 'form-horizontal'}) do |f| %>
      <div class="form-group">
        <%= f.label :email, 'Email', :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, :class => 'form-control', placeholder: "user@domain.tld" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, 'Password', :class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, :class => 'form-control' %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="col-sm-offset-2 col-sm-10">
          <div class="checkbox ">
            <%= f.label :remember_me, 'Remember me' %>
            <%= f.check_box :remember_me %>
            <p><br /></p>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Login', :class => 'btn btn-primary' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>
  </div>


</div>