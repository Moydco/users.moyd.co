
<div class="container">
  <div class="navbar navbar-inverse navbar-fixed-top" role=navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, :class => "navbar-brand" do %>
        <%# image_tag "logo_ar_small.png" %>
        Always<strong>Resolve</strong>
      <% end %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li
        <% if controller.controller_name.to_s == 'semi_static' and controller.action_name.to_s == 'index' %>
        class="active"
        <% end %>
        >
          <%= link_to 'Home' ,root_path %>
        </li>

        <li
        <% if controller.controller_name.to_s == 'semi_static' and controller.action_name.to_s == 'how_it_works' %>
        class="active"
        <% end %>
        >
          <%= link_to 'How it works' , how_it_works_path %>
        </li>

        <li
        <% if controller.controller_name.to_s == 'semi_static' and controller.action_name.to_s == 'plan' %>
        class="active"
        <% end %>
        >
          <%= link_to 'Plan', plan_path %>
        </li>

        <li
        <% if controller.controller_name.to_s == 'semi_static' and controller.action_name.to_s == 'become_a_partner' %>
        class="active"
        <% end %>
        >
          <%= link_to 'Become a partner' , become_a_partner_path  %>
        </li>

      </ul>

      <% if user_signed_in? %>
        <ul class="nav navbar-nav">

          <% unless current_user.plan == 'FREE' %>
              <li
              <% if controller.controller_name.to_s == 'domains' %>
              class="active"
              <% end %>
              >
                <%= link_to 'Domains', '#' %>
              </li>
              <li
              <% if controller.controller_name.to_s == 'ars' %>
              class="active"
              <% end %>
              >
                <%= link_to 'AlwaysResolve', '#' %>
              </li>
            <% end %>
        </ul>
      <% end %>


      <ul class="nav navbar-nav pull-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to '#' do %>
              <i class="icon-book"></i><%= t 'manual' %>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag avatar_url(current_user) %>
              <% if !current_user.name.nil? %>
                <%= 'Welcome ' + current_user.name %>
              <% elsif !current_user.email.nil? %>
                <%= 'Welcome ' + current_user.email %>
              <% else %>
                <%= 'Welcome ' + current_user.username %>
              <% end %>
              <b class="caret"></b>
            </a>


            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Upgrade Plan', plan_path %>
              </li>
              <li>
                <%= link_to 'Charges and Invoices', charges_path %>
              </li>
              <li>
                <%= link_to 'Edit user', edit_user_registration_path %>
              </li>
              <li>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to '#' do %>
              <i class="icon-book"></i> Manual
            <% end %>
          </li>
          <li><%= link_to 'Login', new_user_session_path  %></li>
        <% end %>

      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>