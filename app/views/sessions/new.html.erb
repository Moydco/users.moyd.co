<h1>User Login</h1>
<div class="row">
  <div class="span6 offset3">
    <% unless @application.nil? %>
      <h3>Welcome to <%= @application.name %> login system</h3>
    <% end %>
    <%# form_for(@session, :url => sessions_path, html: {role: 'form' }) do |f| %>
    <%= simple_form_for(:session, :url => sessions_path) do |f| %>
      <div class="form-group">
        <%= f.input :email %>
      </div>

      <div class="form-group">
        <%= f.input :password %>
      </div>

      <%= f.submit 'Log in', class: 'btn btn-large btn-primary' %>
    <% end %>
    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
    <p>I don't remember my email: <%= link_to 'please, help me', password_lost_sessions_url %>!</p>
  </div>
</div>
